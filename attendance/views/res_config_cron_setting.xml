<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inventory_type" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.unit.conversion</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="86"/>
        <field name="inherit_id" ref="hr_attendance.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Cron and Device Configuration" data-key="attendance" >

                    <h2>Cron Settings</h2>
                    <div class="row mt16 o_settings_container" title="Prout prout prout" id="Date range">
                        <div class="col-xs-12 col-md-6 o_setting_box" title="Date range" >
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">

                                <label for="from_date"/>
                                <div class="text-muted">
                                    From Date
                                </div>
                                <div class="text-muted">
                                    <field name="from_date" rows="50"/>
                                </div>

                                <label for="date_to"/>
                                <div class="text-muted">
                                    To Date
                                </div>
                                <div class="text-muted">
                                    <field name="date_to" rows="50"/>
                                </div>



                            </div>
                        </div>
                    </div>
                    <h2>Device Configuration</h2>
                    <div class="row mt16 o_settings_container" title="Device IP Address">
                        <div class="col-xs-12 col-md-6 o_setting_box" title="Device IP Address" >
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="ip_addr"/>
                                <div class="text-muted">
                                    Device Ip
                                </div>
                                <div class="text-muted">
                                    <field name="ip_addr" rows="50"/>
                                </div>


                                <label for="port"/>
                                <div class="text-muted">
                                    Port Number
                                </div>
                                <div class="text-muted">
                                    <field name="port" rows="50"/>
                                </div>


                            </div>
                        </div>
                    </div>
                    
                </div>
            </xpath>
        </field>
    </record>
</odoo>
